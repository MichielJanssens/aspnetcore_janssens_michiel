@model BookListViewModel

@{
    ViewData["Title"] = "Overzicht Boeken";
}
<a asp-controller="Book" asp-action="Detail" asp-route-id="0">Create Book</a>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <td>Title</td>
                    <td>Author</td>
                    <td>Created At</td>
                    <td>ISBN</td>
                    <td>Genre</td>
                    <td>DEL</td>
                </tr>
            </thead>
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td><a asp-controller="Book" asp-action="Detail" asp-route-id="@book.Id">@book.Title</a></td>
                    <td>@book.Author</td>
                    <td>@book.CreationDate.ToLongDateString()</td>
                    <td>@book.ISBN</td>
                    <td>@book.Genre</td>
                    <td>
                        <form asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id" method="post">
                            <input type="submit" value="DEL" />
                        </form>
                    </td>
                </tr>
        
            }
        </table>
    </div>
</div>